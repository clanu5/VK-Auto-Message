<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:id="@+id/close"
        android:drawable="@drawable/close"
        app:state_close="true"/>

    <item
        android:id="@+id/arrow"
        android:drawable="@drawable/back_arrow"/>

    <transition
        android:fromId="@+id/arrow"
        android:toId="@+id/close"
        android:drawable="@drawable/arrow_to_close"/>

    <transition
        android:fromId="@+id/close"
        android:toId="@+id/arrow"
        android:drawable="@drawable/close_to_arrow"/>

</animated-selector>