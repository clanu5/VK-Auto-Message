<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/root_view_background"
    android:id="@+id/root_view"
    android:clipToPadding="false" >

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/user_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardCornerRadius="@dimen/cardCornerRadius"
                android:foreground="?attr/selectableItemBackground"
                style="@style/ViewElevation">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/photo_image_view"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"/>

                    <TextView
                        android:id="@+id/user_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:singleLine="true"
                        android:text="Alex Zhdanov"
                        android:textColor="@color/user_name"
                        android:textSize="20sp"
                        android:transitionName="@string/toolbar_transition"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/enable_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:transitionName="@string/enabled_transition"
                android:background="@null"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/message_card"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:clipToPadding="false"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            android:foreground="?attr/selectableItemBackground"
            style="@style/ViewElevation">

            <TextView
                android:id="@+id/message_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="top"
                android:text="enter_your_message"
                android:textColor="@color/message"
                android:textSize="16sp"
                android:transitionName="@string/message_transition"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/repeat_type_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:clipToPadding="false"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            android:foreground="?attr/selectableItemBackground"
            style="@style/ViewElevation">

            <TextView
                android:id="@+id/repeat_type_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:gravity="top"
                android:text="Days in week *_* Day in year"
                android:textColor="@color/repeat_type"
                android:textSize="20sp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/time_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="@dimen/cardCornerRadius"
                android:foreground="?attr/selectableItemBackground"
                style="@style/ViewElevation">

                <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12dp"
                    android:text="19:18"
                    android:textColor="@color/time"
                    android:textSize="20sp"
                    android:transitionName="@string/time_transition"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/repeat_info_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="@dimen/cardCornerRadius"
                android:foreground="?attr/selectableItemBackground"
                style="@style/ViewElevation">

                <TextView
                    android:id="@+id/repeat_info_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:singleLine="true"
                    android:text="Su Mo Tu We Th"
                    android:textColor="@color/repeat_info"
                    android:textSize="20sp"
                    android:transitionName="@string/repeat_info_transition"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>