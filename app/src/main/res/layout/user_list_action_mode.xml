<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/actionMode"
    android:orientation="horizontal">

    <com.qwert2603.vkautomessage.integer_view.vector_integer_view.VectorIntegerView
        android:id="@+id/integer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/select_all"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_select_all_white_24dp"/>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_toStartOf="@id/select_all"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_delete_white_24dp"/>

    <ImageButton
        android:id="@+id/enable_all"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_toStartOf="@id/delete"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_check_box_white_24dp"/>


</RelativeLayout>