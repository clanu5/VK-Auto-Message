<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end|center_vertical"
    android:orientation="horizontal">

    <com.qwert2603.vkautomessage.integer_view.vector_integer_view.VectorIntegerView
        android:id="@+id/integer_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/enable_all"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_check_box_white_24dp"/>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_delete_white_24dp"/>

    <ImageButton
        android:id="@+id/select_all"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/image_button_background"
        android:src="@drawable/ic_select_all_white_24dp"/>

</LinearLayout>